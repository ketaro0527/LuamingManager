<Window x:Class="LuamingManager.ProgressDialog"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"   
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"   
        Title="Progress Dialog" Width="300" SizeToContent="Height" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="164">
    <Grid>
        <StackPanel Margin="10">
            <ProgressBar Name="Progress" Width="200" Height="20" Minimum="0" Maximum="1" Margin="10" />
            <TextBlock Name="StatusText" Margin="10" Height="24"/>
            <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
                <Button Name="CancelButton" Visibility="Hidden">Cancel</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
